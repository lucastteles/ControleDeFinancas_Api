@model IEnumerable<ControleDeFinancas.Application.Dto.DespesaDto>



@{
    ViewData["Title"] = "Despesa";
}

<h1>Despesa</h1>



<div class="row">
    <div class="col-md-6">
        <form class="form-horizontal">
            <fieldset>
                <legend><b>Vendas por Período</b></legend>
                <div class="form-group">
                    <label for="data" class="col-lg-6 control-label">Data</label>
                    <div class="col-lg-10">
                        <input type="date" name="data" class="form-control" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>


<table class="table">
    <thead>
        <tr>
            <th>
                Nome
            </th>
            <th>
                valor
            </th>
            <th>
                Vencimento
            </th>
            <th>
                Status de Pagamento
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vencimento)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusPagamento)
                </td>
                <td>
                    <a class="btn btn-outline-danger" id="DespesaId" asp-controller="Venda"
                   asp-action="Delete" asp-route-id="@item.DepesaId">Deletar</a>

                </td>
            </tr>
        }
    </tbody>
</table>

